CC = g++ -m64 -std=c++17
CFLAGS = -O2 -Wall -Wextra -Wsign-conversion -ffinite-math-only

BIN_DIR = .
SRC_DIR = src

OCL_INC = -I Khronos
OCL_LIB = C:\Windows\System32\OpenCL.dll

SRC = $(SRC_DIR)\main.cpp
EXEC = $(BIN_DIR)\gfsieve.exe

build: $(EXEC)

$(EXEC): $(SRC)
	$(CC) $(SRC) $(CFLAGS) $(OCL_INC) $(OCL_LIB) -lgmp -static -o $@
